[defaults]
inventory = /etc/ansible/hosts
host_key_checking = False

gathering = smart
fact_caching = yaml
fact_caching_connection = /tmp/ansible_fact_cache
fact_caching_timeout = 300

forks=50

retry_files_enabled = False
callback_whitelist = profile_tasks

precedence = all_plugins_play,groups_plugins_play,all_plugins_inventory,groups_plugins_inventory,all_inventory,groups_inventory

[ssh_connection]
pipelining = True
